{
    "name": "Website Collaboration Tool",
    "version": "0.1.0",
    "description": "Collaboration tool for Website",
    "permissions": ["storage", "tabs", "clipboardWrite", "scripting", "activeTab"],
    "host_permissions": ["https://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "css" : ["popup.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png",
          "assets/nib.png",
          "firebase/firebase-app.js",
          "firebase/firebase-auth.js",
          "firebase/firebase-database.js"
        ],
        "matches": ["https://*/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/icon.png",
        "24": "assets/icon.png",
        "32": "assets/icon.png"
      },
      "default_title": "Website Collaboration Tool",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
